# API Provider Selection (openai or gemini)
API_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_CHAT_MODEL=gpt-4o-mini

# Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Obsidian Configuration
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault
OBSIDIAN_ATTACHMENTS_FOLDER=attachments
OBSIDIAN_DIARY_FOLDER=diary
OBSIDIAN_NOTES_FOLDER=notes/memos

# Voice Memos Path
VOICE_MEMOS_PATH=/Users/username/Library/Group Containers/group.com.apple.VoiceMemos.shared/Recordings

# Optional: Process only files after this date (YYYY-MM-DD)
PROCESS_FILES_AFTER_DATE=2024-01-01
